Accordion:
    orientation: 'vertical'
    AccordionItem:
        title: 'cci-trinity~app services'
        id: trinity_item
        GridLayout
            orientation: 'horizontal'
            cols: 1
            ActionBar:
                pos_hint: {'top':1}
                background_color: [0,0,0,0]
                ActionView:
                    use_separator: True
                    ActionPrevious:
                        id: cci_action_prev
                        title: 'king console'
                        with_previous: False
                        app_icon: './image/king-console32.png'
                    ActionButton:
                        text: 'move'
                        id: packet_stream_btn
                        on_press: app._move_carousel()
            Carousel:
                id: trinity_carousel_id
                direction: 'right'
                loop: True
                on_index: app._on_sync_carousel( args[1] )
                GridLayout
                    orientation: 'horizontal'
                    cols: 1
                    Label:
                        text: 'tornado http/https/wsgi server \n version 4.4.1 ~ app server'
                        halign: 'center'
                        size_hint_y: .15
                    Label:
                        text: 'port 7080'
                        id: process_info
                        size_hint_y: .15
                    ScrollView:
                        id: scrlv
                        size_hint_y:.55
                        TextInput:
                            text: ''
                            size_hint_y: None
                            cursor_blink: True
                            background_color: [0,0,0,0]
                            foreground_color: [1,1,1,1]
                            multiline: True
                            id: status_text
                            font_size: 16
                            readonly: True
                            height: max( (len(self._lines)+1) * self.line_height, scrlv.height)
                    Label:
                        text: 'servicing:\n cci-maelstrom\n cci-bimini'
                        size_hint_y: .15
                        halign: 'center'
                    Switch:
                        id: bootstrap_switch
                        on_active: app._on_start_trinity( *args )
                GridLayout:
                    orientation: 'horizontal'
                    cols: 1
                    Label:
                        text: 'tornado http/https/wsgi server \n version 4.4.1 ~ async services'
                        halign: 'center'
                        size_hint_y: .15
                    Label:
                        text: 'port: 7081'
                        id: vulture_process_info
                        size_hint_y: .15
                    ScrollView:
                        id: scrlv
                        size_hint_y:.55
                        TextInput:
                            text: ''
                            size_hint_y: None
                            cursor_blink: True
                            background_color: [0,0,0,0]
                            foreground_color: [1,1,1,1]
                            multiline: True
                            id: vulture_status_text
                            font_size: 16
                            readonly: True
                            height: max( (len(self._lines)+1) * self.line_height, scrlv.height)
                    Label:
                        text: 'servicing:\n cci-maelstrom'
                        size_hint_y: .15
                        halign: 'center'
                    Button:
                        text: '~'
                        id: manipulate_btn
                        background_color: [1,0,0,1]
                        size_hint_y: .15
                GridLayout:
                    orientation: 'horizontal'
                    cols: 1
                    Label:
                        text: 'tornado http/https/wsgi server \n version 4.4.1 ~ tunnel services'
                        halign: 'center'
                        size_hint_y: .15
                    Label:
                        text: ''
                        id: null_info
                        size_hint_y: .15
                    ScrollView:
                        id: scrlv
                        size_hint_y:.55
                        TextInput:
                            text: ''
                            size_hint_y: None
                            cursor_blink: True
                            background_color: [0,0,0,0]
                            foreground_color: [1,1,1,1]
                            multiline: True
                            id: manipulate_status_text
                            font_size: 16
                            readonly: True
                            height: max( (len(self._lines)+1) * self.line_height, scrlv.height)
                    Label:
                        text: 'servicing:\n cci-maelstrom'
                        size_hint_y: .15
                        halign: 'center'
                    Button:
                        text: '~'
                        id: manipulate_tunnel_btn
                        background_color: [1,0,0,1]
                        size_hint_y: .15

